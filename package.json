{
  "name": "@4c/sunburst",
  "version": "0.2.1",
  "description": "Interactive sunburst built with react-motion and d3",
  "main": "lib/index.js",
  "modules": "es/index.js",
  "scripts": {
    "build": "rimraf lib es && babel src --out-dir lib && BABEL_ENV=esm babel src --out-dir es",
    "lint": "eslint *.js src",
    "format": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run test",
    "test": "npm run lint && npm run build"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4catalyzer/sunburst.git"
  },
  "files": [
    "lib",
    "es"
  ],
  "keywords": [
    "react",
    "sunburst",
    "d3"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4catalyzer/sunburst/issues"
  },
  "homepage": "https://github.com/4catalyzer/sunburst#readme",
  "dependencies": {
    "d3-hierarchy": "^1.0.0",
    "d3-scale": "^1.0.0",
    "d3-shape": "^1.0.0",
    "prop-types": "^15.6.0",
    "react-motion": "^0.5.2"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.36",
    "@babel/core": "^7.0.0-beta.36",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.36",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-react": "^7.0.0-beta.36",
    "babel-eslint": "^8.1.2",
    "eslint": "^4.14.0",
    "eslint-config-4catalyzer": "^0.3.3",
    "eslint-config-4catalyzer-react": "^0.3.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
